<!doctype html>
<meta charset="utf-8"/>

<style>
  .flash {
    padding: 1em 1.25em;
    border-width: 1px;
    border-style: solid;
  }

  .flash.error {
    background: #fcc;
    border-color: #700;
    color: #700;
  }

  .timeline-entry {
    border-bottom: 1px solid #777;
    margin: 1em auto;
    padding: 1em;
    max-width: 600px;
    width: 95%;
  }
  .timeline-entry .boosted-by {
    font-style: italic;
    color: #666;
  }

  .author.display-name {
    font-size: 1.2em;
    font-weight: bold;
  }

  .author.handle {
    font-size: 0.9em;
    color: rgba(0,0,0,0.8);
  }

  .author.avatar {
  }

  .avatar.thumbnail {
    width: 64px;
    max-width: 64px;
    max-height: 64px;
  }

  .timeline-entry img {
    width: 100%;
    max-height: 100%;
  }

  .timeline-entry .attachment-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .timeline-entry .attachment {
    padding: 0;
    margin: 0;
    flex: 0 1 50%;
  }
</style>

<header>
  <h1><a href="/">Moku</a></h1>

  <nav>
    <% if current_user %>
      <div>Logged in as <%= current_user.handle %></div>
      <form action="/logout" method="POST">
        <input type="hidden" name="@method" value="DELETE"/>
        <button>Logout</button>
      </form>
    <% else %>
      <div>
        <a href="/login">Login</a> or <a href="/signup">sign up</a>
      </div>
    <% end %>

    <form action="/search">
      <input type="search" name="query" />
    </form>
  </nav>
</header>
