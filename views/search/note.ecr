<li>
  <div>
    <% if author.icon %>
      <img class="author avatar thumbnail" src="<%= author.icon %>"/>
    <% end %>
    <a href="/accounts/<%= URI.encode_www_form author.id.to_s %>">
      <%= author.display_name %>
      <small>@<%= author.handle %>@<%= author.id.host %></small></a>
    <%= RemoteLink.new(author.id) %>
  </div>
  <article>
    <header>
      <a href="/notes/<%= URI.encode_www_form note.id.to_s %>"><time><%= note.created_at %></time></a>
      <%= RemoteLink.new(note.id) %>
    </header>
    <main>
      <% unless note.summary.empty? %>
        <details>
          <summary><%= note.summary %></summary>
      <% end %>

      <%= note.content %>

      <% unless note.summary.empty? %>
        </details>
      <% end %>
    </main>
  </article>
</li>
